{% extends "structure/structure_public.jinja" %}

{% block title %}DI4D Portal - Tech Talks{% endblock %}

{% block content %}
<div class="w-full">
    <!-- Header Section with Dark Blue Background -->
    <div class="bg-[var(--blue_di4d)] px-6 py-12 lg:px-20 lg:py-15">
        <div class="max-w-7xl mx-auto">
            <!-- Title -->
            <h1 class="text-4xl lg:text-5xl font-bold mb-8 text-white text-center">
                Tech Talks
            </h1>
            
            <!-- Search Bar -->
            <div class="max-w-md mx-auto mb-8">
                <input 
                    type="text" 
                    id="techtalksSearch"
                    placeholder="Search tech talks..." 
                    class="w-full px-4 py-3 rounded-lg border-2 border-white bg-transparent text-white placeholder-gray-300 focus:outline-none focus:border-[var(--orange_di4d)] transition"
                >
            </div>
        </div>
    </div>

    <!-- Tech Talks Grid -->
    <div class="bg-[var(--blue_di4d)] px-6 py-12 lg:px-20 lg:py-15">
        <h2 class="text-center text-3xl lg:text-4xl text-white font-bold px-6">Checkout our latest tech talks!</h2>
        {% if techtalks|length == 0 %}
            <h3 class="text-center text-white text-xl lg:text-2xl mt-6">No tech talks available at the moment.</h3>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 mt-6 mx-auto max-w-7xl">
                {% for talk in techtalks %}
                    {{ talk_item(talk) }}
                {% endfor %}
            </div>
        {% endif %}
    </div>


<script>
    // Search functionality
    document.getElementById('techtalksSearch').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const sections = document.querySelectorAll('.bg-\\[var\\(--blue_di4d\\)\\]');
        
        sections.forEach(section => {
            const text = section.textContent.toLowerCase();
            if (text.includes(searchTerm)) {
                section.style.display = '';
            } else {
                section.style.display = 'none';
            }
        });
    });
</script>
{% endblock %}