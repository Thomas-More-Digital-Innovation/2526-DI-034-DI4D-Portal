{% extends "structure/structure_public.jinja" %}
{% macro logo_box(logos) %}
<div class="w-full flex justify-center py-6">
  <div class="max-w-7xl w-full px-6">
    <div class="w-full bg-white rounded-xl flex flex-wrap items-center justify-center gap-8 px-8 py-6">
      {% for logo in logos %}
        <div>
            {% if logo.url %}
                <a href="{{ logo.url }}" target="_blank" class="flex flex-col gap-4">
                    <img src="{{ logo.src }}" alt="{{ logo.alt }}"
                    class="h-20 w-auto object-contain" />
                    {% if logo.name %}<p class="text-center text-xs">{{ logo.name }}</p>{% endif %}
                </a>
            {% else %}
                <img src="{{ logo.src }}" alt="{{ logo.alt }}"
                class="h-20 w-auto object-contain" />
            {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endmacro %}

{% block title %}Home - DI4D Portal{% endblock %}
