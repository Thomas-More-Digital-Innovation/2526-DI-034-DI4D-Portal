{# GENERAL COMPONENTS #}
{# NEWS ITEM BOX #}
{% macro old_news_item(article) %}
<div class="w-full h-full max-w-lg flex flex-col lg:flex-row gap-4 p-6 mb-2 bg-white rounded-lg news">
  <img src="{{ article.picture }}" alt="{{ article.title }}" 
       class="w-32 h-32 lg:w-40 lg:h-40 object-cover rounded mx-auto" />
  <div>
    <h3 class="text-xl font-bold mb-2">{{ article.title }}</h3>
    <p class="mb-4 text-[var(--light_grey)]">{{ article.description }}</p>
    
    <div class="flex justify-between items-end gap-4">
      <div class="text-[var(--light_grey)] text-sm">
        <p><i class="fa-regular fa-calendar"></i> {{ article.lastEditDate }}</p>
        {% if article.showAuthor %}
          <p><i class="fa-solid fa-file-pen"></i> {{ article.author.firstname }} {{ article.author.lastname }}</p>
        {% endif %}
      </div>
      <a class="btn_primary_orange px-6 py-2" 
         href="{{ article.mediaPath }}">Read it here</a>
    </div>
  </div>
</div>
{% endmacro %}
{# TALK ITEM BOX #}
{% macro talk_item(talk) %}
<div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition flex flex-col h-full">
  <div class="w-full h-56 overflow-hidden">
    {% if talk.thubnail %}
      <img src="{{ talk.thubnail }}" alt="{{ talk.title }}" 
           class="w-full h-full object-cover" />
    {% else %}
      <div class="w-full h-full bg-gradient-to-r from-blue-600 to-blue-800 flex items-center justify-center">
        <span class="text-white text-lg font-bold text-center px-4">{{ talk.title }}</span>
      </div>
    {% endif %}
  </div>
  <div class="p-4 flex flex-col flex-grow">
    <h3 class="text-lg font-bold mb-2 text-gray-900 line-clamp-2">{{ talk.title }}</h3>
    {% if talk.date %}
      <p class="text-sm text-gray-500 mb-2"><i class="fa-regular fa-calendar mr-1"></i>{{ talk.date.strftime('%d/%m/%Y') }}</p>
    {% endif %}
    <p class="text-sm text-gray-600 mb-4 flex-grow line-clamp-3">{{ talk.description }}</p>
    <div class="flex items-center justify-between gap-2">
      <div class="text-sm text-gray-600 flex items-center w-1/2">
        <i class="fa-solid fa-microphone mr-2"></i>
        <span class="line-clamp-1">{{ talk.speaker }}</span>
      </div>
      <a class="btn_primary_orange w-1/2 text-center" href="{{ url('tech_talk_detail', kwargs={'talk_id': talk.id}) }}">View Talk</a>
    </div>
  </div>
</div>
{% endmacro %}

{# TECH TALK DETAIL BOX #}
{% macro techtalk_detail(talk, recent_talks, video_url, embed_url, is_mp4, is_youtube, info_bg="--blue_di4d", text_class="text-gray-200", heading_class="text-white") %}
<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <div class="w-full lg:w-1/2 mx-auto bg-black flex items-center justify-center h-[32rem]">
    {% if is_mp4 %}
      <video class="w-full h-full" controls>
        <source src="{{ video_url }}" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    {% elif video_url %}
      <iframe
        class="w-full h-full"
        src="{{ video_url }}"
        title="{{ talk.title }}"
        frameborder="0"
        allowfullscreen>
      </iframe>
    {% else %}
      <div class="text-white text-center">No video available.</div>
    {% endif %}
  </div>
  <div class="p-6 {{ heading_class }} bg-[var({{ info_bg }})]">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-4">
      <div class="text-sm {{ text_class }}">
        {% if talk.date %}
          <p><i class="fa-regular fa-calendar mr-2"></i>{{ talk.date.strftime('%d/%m/%Y') }}</p>
        {% endif %}
        <p><i class="fa-solid fa-microphone mr-2"></i>{{ talk.speaker }}</p>
      </div>
    </div>
    <h2 class="text-lg font-semibold mb-2">Information:</h2>
    <p class="text-sm {{ text_class }}">{{ talk.description }}</p>
  </div>
</div>

<div class="mt-10">
  <h2 class="text-2xl font-bold {{ heading_class }} text-center mb-6">Most recent tech talks</h2>
  {% if recent_talks %}
    <div class="w-full lg:w-2/3 mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {% for recent in recent_talks %}
        {{ talk_item(recent) }}
      {% endfor %}
      </div>
    </div>
  {% else %}
    <p class="{{ heading_class }} text-center">No other tech talks found.</p>
  {% endif %}
</div>
{% endmacro %}

{# NEW VERSION OF NEWS ITEM BOX #}
{% macro news_item(article, color) %}
<div class="{% if color%} bg-[{{ color }}] {% else %}bg-white{% endif %} rounded-lg news w-full h-full flex flex-col p-6">
  <div class="flex flex-col md:flex-row gap-2 items-stretch h-full">
      <img src="{{ article.picture }}" alt="{{ article.title }}" 
          class="w-32 h-32 md:w-48 md:h-48 md:basis-2/5 aspect-square object-cover rounded mx-auto" />
      <div class="md:basis-3/5 flex flex-col h-full">
        <div class="flex-1">
          <h3 class="text-2xl mb-2">{{ article.title }}</h3>
          {# Line clamp is to limit the number of lines shown for the description (add also ...) #}
          <p class="mb-4 text-[var(--light_grey)] line-clamp-4">{{ article.description }}</p>
        </div>
        <div class="flex items-end justify-between">
          <div class="text-[var(--light_grey)] text-sm">
            <p><i class="fa-regular fa-calendar"></i> {{ article.lastEditDate }}</p>
              {% if article.showAuthor %}
                <p><i class="fa-solid fa-file-pen"></i> {{ article.author.firstname }} {{ article.author.lastname }}</p>
              {% endif %}
          </div>
            <a class="btn_primary_orange px-6 py-2" 
            href="{{ article.mediaPath }}">Read it here</a>
        </div>
      </div>
    </div>
</div>
{% endmacro %}

