{# GENERAL COMPONENTS #}
{# NEWS ITEM BOX #}
{% macro old_news_item(article) %}
<div class="w-full h-full max-w-lg flex flex-col lg:flex-row gap-4 p-6 mb-2 bg-white rounded-lg news">
  <img src="{{ article.picture }}" alt="{{ article.title }}" 
       class="w-32 h-32 lg:w-40 lg:h-40 object-cover rounded mx-auto" />
  <div>
    <h3 class="text-xl font-bold mb-2">{{ article.title }}</h3>
    <p class="mb-4 text-[var(--light_grey)]">{{ article.description }}</p>
    
    <div class="flex justify-between items-end gap-4">
      <div class="text-[var(--light_grey)] text-sm">
        <p><i class="fa-regular fa-calendar"></i> {{ article.lastEditDate }}</p>
        {% if article.showAuthor %}
          <p><i class="fa-solid fa-file-pen"></i> {{ article.author.firstname }} {{ article.author.lastname }}</p>
        {% endif %}
      </div>
      <a class="btn_primary_orange px-6 py-2" 
         href="{{ article.mediaPath }}">Read it here</a>
    </div>
  </div>
</div>
{% endmacro %}
{# TALK ITEM BOX #}
{% macro talk_item(talk) %}
<div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition flex flex-col h-full">
  <div class="w-full h-40 overflow-hidden bg-gray-100 flex items-center justify-center">
    {% if talk.thubnail %}
      <img src="{{ talk.thubnail }}" alt="{{ talk.title }}" 
           class="w-full h-full object-contain" />
    {% else %}
      <div class="w-full h-full bg-gradient-to-r from-blue-600 to-blue-800 flex items-center justify-center">
        <span class="text-white text-lg font-bold text-center px-4">{{ talk.title }}</span>
      </div>
    {% endif %}
  </div>
  <div class="p-4 flex flex-col flex-grow">
    <h3 class="text-lg font-bold mb-2 text-gray-900 line-clamp-2">{{ talk.title }}</h3>
    <p class="text-sm text-gray-600 mb-4 flex-grow line-clamp-1">{{ talk.description }}</p>
    <div class="flex items-center justify-between gap-2">
      <div class="flex flex-col gap-1 w-1/2">
        <div class="text-sm text-gray-600 flex items-center">
          <i class="fa-solid fa-microphone mr-2"></i>
          <span class="line-clamp-1">{{ talk.speaker }}</span>
        </div>
        {% if talk.date %}
        <div class="text-sm text-gray-600 flex items-center">
          <i class="fa-solid fa-calendar mr-2"></i>
          <span>{{ talk.date }}</span>
        </div>
        {% endif %}
      </div>
      <a class="btn_primary_orange w-1/2 text-center" href="{{ url('tech_talk_detail', kwargs={'talk_id': talk.id}) }}">View Talk</a>
    </div>
  </div>
</div>
{% endmacro %}

{# TECH TALK DETAIL BOX #}
{% macro techtalk_detail(talk, recent_talks, video_url, embed_url, is_local_video, is_youtube, info_bg="--blue_di4d", text_class="text-white", heading_class="text-white") %}
<div>
  <div class="w-full lg:w-3/4 mx-auto bg-[var(--blue_di4d)] flex items-center justify-center h-[32rem]">
    {% if is_local_video %}
      <video class="w-full h-full" controls controlslist="nodownload" disablepictureinpicture oncontextmenu="return false;">
        <source src="{{ video_url }}" type="video/mp4" />
        <source src="{{ video_url }}" type="video/webm" />
        <source src="{{ video_url }}" type="video/ogg" />
        Your browser does not support the video tag.
      </video>
    {% else %}
      <div class="text-white text-center">No video available.</div>
    {% endif %}
  </div>
  <div class="p-6 text-white w-full lg:w-3/4 mx-auto bg-[var(--blue_di4d)] flex-collum items-center justify-center">
    <h2 class="text-lg font-semibold mb-2 text-white">Information:</h2>
    <p class="text-sm text-white">{{ talk.description }}</p>
  </div>
</div>

<div class="mt-10">
  <h2 class="text-2xl font-bold text-white text-center mb-6">Most recent tech talks</h2>
  {% if recent_talks %}
    <div class="w-full lg:w-2/3 mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {% for recent in recent_talks %}
        {{ talk_item(recent) }}
      {% endfor %}
      </div>
    </div>
  {% else %}
    <p class="{{ heading_class }} text-center">No other tech talks found.</p>
  {% endif %}
</div>
{% endmacro %}

{# NEW VERSION OF NEWS ITEM BOX #}
{% macro news_item(article, color) %}
<div class="{% if color%} bg-[{{ color }}] {% else %}bg-white{% endif %} rounded-lg news w-full h-full flex flex-col p-6">
  <div class="flex flex-col md:flex-row gap-2 items-stretch h-full">
      <img src="{{ article.picture }}" alt="{{ article.title }}" 
          class="w-32 h-32 md:w-48 md:h-48 md:basis-2/5 aspect-square object-cover rounded mx-auto" />
      <div class="md:basis-3/5 flex flex-col h-full">
        <div class="flex-1">
          <h3 class="text-2xl mb-2">{{ article.title }}</h3>
          {# Line clamp is to limit the number of lines shown for the description (add also ...) #}
          <p class="mb-4 text-[var(--light_grey)] line-clamp-4">{{ article.description }}</p>
        </div>
        <div class="flex items-end justify-between">
          <div class="text-[var(--light_grey)] text-sm">
            <p><i class="fa-regular fa-calendar"></i> {{ article.lastEditDate }}</p>
              {% if article.showAuthor %}
                <p><i class="fa-solid fa-file-pen"></i> {{ article.author.firstname }} {{ article.author.lastname }}</p>
              {% endif %}
          </div>
            <a class="btn_primary_orange px-6 py-2" 
            href="{{ article.mediaPath }}">Read it here</a>
        </div>
      </div>
    </div>
</div>
{% endmacro %}

{# Empty modal #}
{% macro empty_modal(id, title) %}
<div x-show="open_{{ id }}" 
     x-cloak
     style="display:none" 
     class="fixed inset-0 z-50 flex items-center justify-center bg-black/75 p-4">
    <div @click.stop class="bg-[--light_grey] rounded-xl p-4 max-w-lg w-full max-h-[90vh] overflow-auto">
        <h2 class="text-2xl font-bold text-white mb-4">{{ title }}</h2>
        <div class="mt-4">
          {{ caller() }}
        </div>
    </div>
</div>
{% endmacro %}

{# Info modal #}
{% macro info_modal(id, title, message) %}
<div x-show="open_{{ id }}" 
     x-cloak
     style="display:none" 
     class="fixed inset-0 z-50 flex items-center justify-center bg-black/75 p-4"
     @click="open_{{ id }} = false">
    <div @click.stop class="bg-[--light_grey] rounded-xl p-4 max-w-lg w-full max-h-[90vh] overflow-auto">
        <h2 class="text-2xl font-bold text-white mb-4">{{ title }}</h2>
        <p class="text-white">{{ message }}</p>
        <button @click="open_{{ id }} = false" class="btn w-full text-[--button_text_modal] mt-4 bg-[--white_grey]">Continue</button>
      </div>
</div>
{% endmacro %}

{# Delete confirm modal#}
{% macro delete_confirm_modal(title, csrf_token) %}
<div x-show="currentDeleteId !== null, currentDeleteName !== null" 
     x-cloak
     style="display:none" 
     class="fixed inset-0 z-50 flex items-center justify-center bg-black/75 p-4"
     @click="currentDeleteId = null, currentDeleteName = null">
    <div @click.stop class="bg-[--light_grey] rounded-xl p-4 max-w-lg w-full max-h-[90vh] overflow-auto">
        <h2 class="text-2xl font-bold text-white mb-4">{{ title }}</h2>
        <p class="text-white">Are you sure you want to delete <span x-text="currentDeleteName"></span>? This action is irreversible.</p>
        <div class="w-full flex flex-row gap-2 mt-4">
          <button @click="currentDeleteId = null, currentDeleteName = null" class="btn text-[--button_text_modal] flex-1 bg-[--white_grey]">Cancel</button>
          <form method="post" class="flex-1 flex">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}"/>
            <input type="hidden" name="delete_id" x-bind:value="currentDeleteId"/>
            <button type="submit" class="btn flex-1 text-white bg-[--red]">Delete</button>
          </form>
        </div>
    </div>
</div>
{% endmacro %}

