{% from 'structure/structure.jinja' import news_item %}
<div class="justify-center flex">
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-3 mt-6 {% if not request.user.is_authenticated %}max-w-6xl{% endif %} w-full">
        {% for article in all_articles %}
            {% if request.user.is_authenticated %}
                {{ news_item(article, "--white_grey", request) }}
            {% else %}
                {{ news_item(article) }}
            {% endif %}
        {% endfor %}
    </div>
</div>
{% if not all_articles %}
    <p class="text-white text-center">No news articles found.</p>
    {% if total_articles > 0 %}
        <div class="mx-auto flex justify-center mt-4">
            <a href="{{ url('news') }}" class="btn_primary_orange">View all articles</a>
        </div>
    {% endif %}
{% endif %}