{# File List Preview Component - Used by HTMX for displaying selected files #}
{% if file_names and file_names|length > 0 %}
<div class="bg-white w-fit rounded-lg border border-gray-200 p-3 ">
    <p class="text-sm font-semibold text-gray-800 mb-2"><i class="fa-solid fa-paperclip mr-2"></i>Selected files ({{ file_names|length }}):</p>
    <ul class="space-y-1">
        {% for name in file_names %}
        <li class="flex items-center justify-between gap-2 text-sm text-gray-700 py-1">
            <span class="flex items-center gap-2">
                <i class="fa-solid fa-file text-green-500"></i>{{ name }}
            </span>
            <button 
                type="button"
                hx-post="{{ url('delete_preview_file') }}"
                hx-vals='{"filename": "{{ name }}"}'
                hx-target="#file_list_container"
                hx-swap="innerHTML"
                class="text-red-500 hover:text-red-700 p-1"
                title="Remove file"
            >
                <i class="fa-solid fa-times"></i>
            </button>
        </li>
        {% endfor %}
    </ul>
</div>
{% endif %}
