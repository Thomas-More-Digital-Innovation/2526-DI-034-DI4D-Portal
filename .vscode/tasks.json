{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Django Server",
            "type": "shell",
            "command": "${workspaceFolder}\\code\\.venv\\Scripts\\python.exe",
            "args": [
                "${workspaceFolder}\\code\\DI4D_Portal\\manage.py",
                "runserver"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Performing system checks",
                    "endsPattern": "^Quit the server with CTRL-BREAK"
                }
            },
            "presentation": {
                "group": "dev"
            }
        },
        {
            "label": "Run Tailwind Watcher",
            "type": "shell",
            "command": "${workspaceFolder}\\code\\.venv\\Scripts\\python.exe",
            "args": [
                "${workspaceFolder}\\code\\DI4D_Portal\\manage.py",
                "tailwind",
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Tailwind CSS is running",
                    "endsPattern": "^Done in"
                }
            },
            "presentation": {
                "group": "dev"
            }
        },
        {
            "label": "Run Livereload",
            "type": "shell",
            "command": "${workspaceFolder}\\code\\.venv\\Scripts\\python.exe",
            "args": [
                "${workspaceFolder}\\code\\DI4D_Portal\\manage.py",
                "livereload"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Starting livereload",
                    "endsPattern": "^Listening on"
                }
            },
            "presentation": {
                "group": "dev"
            }
        },
        {
            "label": "dev",
            "dependsOn": [
                "Run Django Server",
                "Run Tailwind Watcher",
                "Run Livereload"
            ],
            "problemMatcher": []
        }
    ]
}
